<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
     <p>by {{post.author}} </p>
  </div>
  <div class="col-md-7">
    <h4>
     <a href="/post/{{post.id}}"> {{post.description}}</a>
    </h4>
    <p>{{trim_string post.body}}<a href="/post/{{post.id}}">...</a></p>
  </div>
</div>
{{/each}}
